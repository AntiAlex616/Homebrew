	<element name="Warrior Proficiencies" type="Archetype Feature" source="KH" id="ID_KH_ARCHETYPE_FEATURE_WARRIOR_PROFICIENCIES">
		<supports>Warrior</supports>
		<description>
			<p>At 1st level you gain proficiencies in Simple and Martial Melee Weapons as well as Medium Armor.</p>
		</description>
		<rules>
			<grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_SIMPLE_WEAPONS" requirements="!ID_KH_ARCHETYPE_FEATURE_WARRIOR_PROFICIENCIES"/>
